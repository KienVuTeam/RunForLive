<style>
    a {
        text-decoration: none;

    }

    header{
        height: 65px;
        position: fixed;
        z-index: 1000;
        top:0;
        left: 0;
        right: 0;
        width: 100%;
        display: flex;
        justify-content: center;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);

    }
    header .main-content{
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%; /* Đảm bảo nó chiếm toàn bộ chiều ngang */
