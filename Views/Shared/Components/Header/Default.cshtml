    }

    nav ul li:hover {
        border-bottom: 2px solid #FD5056;
    }

    .navbar li a {
        @* border: 1px solid #000; *@
        display: block;
        padding: 0px 30px;
        @* margin: 0 10px; *@
        @* height: 65px; *@
        text-align: center;
        color: #202020;
        font-size: 1.6rem;
        color:#202020;
